= simple_form_for @product do |f|
  = f.input :name
  = f.input :price
  = f.input :description
  .row
    .col-md-6
      = f.input :cover_product, wrapper: "custom_file"
    .col-md-5.offset-md-1
      .cover_product
        %i.fa.fa-trash.remove-button
        = link_to 'Remove', delete_attachment_product_path(@product),
          method: :delete,
          data: { confirm: 'Are you sure?' }
        = image_tag(@product.cover_product, width: 100, height: 100, id: "image-preview")
  = f.button :submit, "Create", :class => "btn btn-primary"
  = link_to "Cancel", products_path, :class => "btn btn-outline-info"
:css
  div.cover_product {
      position: relative;
      float:left;
      margin:5px;
      padding: 5px;
      border: 1px solid #ccc;
  }
  div.cover_product:hover img{
      opacity:0.5;
  }
  div.cover_product:hover i{
      display: block;
      cursor: pointer;
  }
  div.cover_product i{
      position:absolute;
      display:none;
      top:5px;
      right:5px;
  }
