%main.card
  .row.no-gutters
    %aside.col-sm-6.border-right
      %article.gallery-wrap
        .img-big-wrap
          %div
            =link_to image_tag(@product.image), product_path(@product.id), :data => { :'fancybox' => ''}
    %aside.col-sm-6
      %article.card-body
        %h3.title.mb-3=@product.name
        .mb-3
          %var.price.h3.text-success
            %span.num= number_to_currency(@product.price)
        %dl
          %dt Description
          %dd
            %p= @product.description
        %hr/
        = link_to "Buy", new_product_charge_path(@product.id), :class => "btn btn-outline-primary"

