.main-content
  %section#products
    #code_prod2
      .row
        - @products.each do |p|
          .col-md-3
            %figure.card.card-product
              .img-wrap
                = link_to image_tag(p.cover_product), product_path(p.id)
              %figcaption.info-wrap
                = link_to p.name, product_path(p.id)
                .action-wrap
                  %a.btn.btn-primary.btn-sm.float-right{:href => "#"} Buy
                  .price-wrap.h5
                    %span.price-new $#{p.price}
