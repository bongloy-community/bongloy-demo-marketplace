!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Bongloy Marketplace
    = csrf_meta_tags
    = csp_meta_tag
    = javascript_include_tag("https://js.bongloy.com/v3")
    = tag(:meta, name: "bongloy-publishable-key", content: Rails.application.credentials.bongloy_publishable_key)
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body.relative
    = render "shared/navbar"
    .container
      = yield
